@model IEnumerable<Projeto_CLOUD_45_2021.Models.Utilizador>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestão de Utilizadores</h2>

<p>
    <a asp-action="Create" class="btn btn-secondary">Novo Utilizador</a>
</p>

<table class="table table-borderless table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contribuinte)
        </th>
        <th>Ações</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contribuinte)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.UtilizadorId">Editar</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.UtilizadorId">Ver detalhes</a>
                    <a class="btn btn-secondary" onclick="return confirm('Deseja realmente deletar este utilizador?')" asp-action="Delete" asp-route-id="@item.UtilizadorId">Deletar</a>
                </td>
            </tr>
        }
        <tr>
            <td>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </td>
        </tr>
    </tbody>
</table>
