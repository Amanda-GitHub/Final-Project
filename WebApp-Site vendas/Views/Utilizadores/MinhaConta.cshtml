@model Projeto_CLOUD_45_2021.Models.Utilizador

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <h3>Minha Conta</h3>
    <div class="row gx-3">
        <div class="col-4">
            <div class="list-group">
                <a asp-controller="Utilizadores" asp-action="Edit" asp-route-id="@Model.UtilizadorId" class="list-group-item list-group-item-action">
                    <i class="fas fa-user"></i> Dados Pessoais
                </a>
                <a asp-controller="Encomendas" asp-action="MinhasEncomendas" asp-route-id="@Model.UtilizadorId" class="list-group-item list-group-item-action">
                    <i class="fas fa-truck"></i> Encomendas
                </a>
                <a asp-controller="Utilizadores" asp-action="Logout" class="list-group-item list-group-item-action">
                    <i class="fas fa-door-open"></i> Sair
                </a>
            </div>
        </div>
        <div class="col-8">
        </div>
    </div>
</div>
