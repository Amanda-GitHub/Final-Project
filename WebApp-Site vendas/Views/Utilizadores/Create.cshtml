@model Projeto_CLOUD_45_2021.Models.Utilizador

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="flex-fill">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-sm-12 col-md-10 col-lg-8">
                <br />
                <h2>Criar uma conta:</h2><br />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" autofocus />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-4">
                            <label asp-for="Contribuinte" class="control-label"></label>
                            <input asp-for="Contribuinte" class="form-control" autofocus />
                            <span asp-validation-for="Contribuinte" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-4">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input type="date" asp-for="DataNascimento" class="form-control" autofocus />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-4">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input type="tel" asp-for="Telefone" class="form-control" autofocus />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input type="email" asp-for="Email" class="form-control" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control" autofocus />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Morada" class="control-label"></label>
                            <input asp-for="Morada" class="form-control" autofocus />
                            <span asp-validation-for="Morada" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-3">
                            <label asp-for="Numero" class="control-label"></label>
                            <input asp-for="Numero" class="form-control" autofocus />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-3">
                            <label asp-for="Andar" class="control-label"></label>
                            <input asp-for="Andar" class="form-control" autofocus />
                            <span asp-validation-for="Andar" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Localidade" class="control-label"></label>
                            <input asp-for="Localidade" class="form-control" autofocus />
                            <span asp-validation-for="Localidade" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="CodigoPostal" class="control-label"></label>
                            <input asp-for="CodigoPostal" class="form-control" autofocus />
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <input type="submit" value="Enviar" class="btn btn-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
