@{
    ViewData["Title"] = "Home Page";
}



@*<div class="container">*@
<div id="carouselMain" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselMain" data-slide-to="0" class="active"></li>
        <li data-target="#carouselMain" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="img-fluid d-block" src="~/img/pexels-karolina-grabowska-4207910.jpg" alt="Primeiro Slide">
            <div class="carousel-caption">
                <h1>Frete grátis em pedidos a partir de 30€</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid d-block" src="~/img/pexels-huy-phan-2987081 (2).jpg" alt="Segundo Slide">
            <div class="carousel-caption">
                <h1>Aproveite os substratos em promoção</h1>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselMain" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselMain" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>
@*</div>*@


<div class="jumbotron jumbotron-fluid" style="background-color:white">
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="col-sm-6 col-md-2 text-center">
                <i class="fas fa-shipping-fast" style="font-size:40px"></i><br />
                <h6>Entregas grátis a partir de 30€</h6>
            </div>
            <div class="col-sm-6 col-md-2 text-center">
                <i class="fas fa-shield-alt" style="font-size:40px"></i><br />
                <h6>Compras segura e sem riscos</h6>
            </div>
            <div class="col-sm-6 col-md-2 text-center">
                <i class="fas fa-undo" style="font-size:40px"></i><br />
                <h6>Devoluções gratuitas</h6>
            </div>
        </div>
    </div>
</div>

